{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-sm table-striped">
        <thead>
        <tr>
            <th scope="col">{{ titles.id }}</th>
            <th scope="col">{{ titles.lastName }}</th>
            <th scope="col">{{ titles.firstName }}</th>
            <th scope="col">{{ titles.phoneNumber }}</th>
        </tr>
        </thead>
        <tbody>
        {% for adherent in adherents %}
            <tr>
                <th scope="row">{{ adherent.id }}</th>
                <td>{{ adherent.lastName }}</td>
                <td>{{ adherent.firstName }}</td>
                <td>{{ adherent.phoneNumber }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}